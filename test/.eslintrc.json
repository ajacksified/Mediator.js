{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "script"
    },
    "plugins": [
        "promise"
    ],
    "extends": [
        "standard",
        "eslint:recommended",
        "eslint-config-problems",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": "off",
        "eqeqeq": "off"
    }
}