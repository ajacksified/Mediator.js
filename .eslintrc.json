{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "standard"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}